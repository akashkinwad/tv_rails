              .btn-outer-1.d-flex.flex-lg-row.flex-column.justify-content-center.align-items-center
                = f.submit 'Save', class: 'btn px-5 btn-primary bg-color-2 br-style-1 mint-btn mb-3 mb-lg-0 me-lg-3 fw-6'

