= form_with(model: [:user, offer]) do |form|
  .mb-3
    = form.label :amount, style: "display: block", class: "form-label"
    = form.text_field :amount, class: "form-control"
    %div{style: "color: red"}
      - if offer.errors.include?(:amount)
        - offer.errors.full_messages_for(:amount).each do |error_message|
          = error_message
  .mb-3
    = form.submit "Save", class: "btn btn-success btn-block"

