%section.profile_view
  .container-fluid.mt-2
    .row.profile-sec.py-4.d-flex.justify-content-center.align-items-center.position-relative
      .talenVerseOuter.d-flex.p-4
        .position-relative
          %img.tVerse-img{src: profile_url(current_user)}/
          %img.tVerseCheck-img{src: "/user/img/default/checkImg.png"}/
        .tVerseRigh.flex-1.d-flex.flex-column.align-items-start.ps-4
          .d-flex.w-100.sp-label.justify-content-between
            %span Sport | Diverse
            %span.color-2.fw-bold.spNum-label
              = "##{current_user.id}"
          .text-start.heading-3.mb-4.color-2
            = current_user.name
          .text-start.d-flex.mb-2.mt-2
            %img.tInnerImg.me-2{src: "/user/img/default/vector1.png"}/
            .tText
              = current_user.wallet_address
          .d-flex.w-100.justify-content-between
            %span.tJoinText
              = "Joined | #{current_user.created_at.strftime('%B %Y')}"
      .setShare.d-flex.border.position-absolute
        %img.crs-pointer.setShareicon.border-end.pe-2{alt: "", src: "/user/img/default/setting.png"}/
        %img.crs-pointer.setShareicon.ps-2{alt: "", src: "/user/img/default/share.png"}/
%section.tsContainer.bt-4
  .d-flex.h-100.position-relative.tsContainer-inner
    .leftSection.flex-1.border-end
      .tsmenu-items.menu-items.d-flex.justify-content-between.align-items-center.py-3
        #tabNav.d-flex.justify-content-center.align-items-center.nav
          .nav-item
            = link_to user_profile_path(page: :collected), class: "menu-item nav-link px-2 px-xl-3 active" do
              %span Collected
          .nav-item
            = link_to user_profile_path(page: :created), class: "menu-item nav-link px-2 px-xl-3" do
              %span Created
          .nav-item
            %a.menu-item.nav-link.px-2.px-xl-3{href: "#Favorited"}
              %span Favorited
          .nav-item
            %a.menu-item.nav-link.px-2.px-xl-3.me-3.me-xl-5{href: "#Hidden"}
              %span Hidden
        .d-flex.justify-content-center.align-items-center
          %a.menu-item.px-2.px-xl-3{href: "#link-2"}
            %span Activity
          %a.menu-item.px-2.px-xl-3{href: "#link-3"}
            %span Offers
          = link_to user_profile_path(page: :listings), class: 'menu-item px-2 px-xl-3' do
            %span Listings
          %a.menu-item.ps-2.ps-xl-3
            %img.closeBtn.tInnerImg.me-2{src: "/user/img/default/closeBtn.png"}/
      #tab-content
        .tab-container
          .leftMainContainer.d-flex.flex-wrap.mt-2.moreBox.ps-2.pb-3
            - if params[:page] == 'listings'
              = render partial: 'listing_offers'
            - else
              = render partial: 'collected_offers'

        .tab-container
    .rightSection.position-relative.h-100.py-3
      .d-flex.justify-content-between.align-items-center.position-relative.mb-4.px-3
        .showFilter.filterDiv.position-absolute
          %img.crs-pointer.showMoreBox{alt: "", src: "/user/img/default/filter.png"}/
        .filterHead Filter
        .filterIcn.d-flex.border
          %img.crs-pointer.flitericon.border-end.pe-2.showMoreBox{alt: "", src: "/user/img/default/Small-Icon.svg"}/
          %img.crs-pointer.flitericon.ps-2.showLessBox{alt: "", src: "/user/img/default/Big-Icon.svg"}/
      .py-2.filterSelectOuter
        .my-3.px-4
          .filterselectOuter
            %select.form-select.select-filed{"aria-label" => "Default select example"}
              %option{selected: "selected"} Most Recent
              %option{value: "1"} One
              %option{value: "2"} Two
              %option{value: "3"} Three
        .my-3.px-4
          .filterselectOuter
            %select.form-select.select-filed{"aria-label" => "Default select example"}
              %option{selected: "selected"} Status
              %option{value: "1"} One
              %option{value: "2"} Two
              %option{value: "3"} Three
        .my-3.px-4
          .filterselectOuter
            %select.form-select.select-filed{"aria-label" => "Default select example"}
              %option{selected: "selected"} Chains
              %option{value: "1"} One
              %option{value: "2"} Two
              %option{value: "3"} Three
      .filterPrice.pt-4.pb-2.px-4.px-lg-5.px-xl-5
        .fPrice Price
        .d-flex.align-items-center.justify-content-even
          .text-center
            %div Min
            .price-grp.d-flex.justify-content-start.align-items-center
              %input.input-field.w-100{id: "", placeholder: "", type: "number"}/
          .mx-3.mt-4.priceTo to
          .text-center
            %div Max
            .price-grp.d-flex.justify-content-start.align-items-center
              %input.input-field.w-100{id: "", placeholder: "", type: "number"}/

